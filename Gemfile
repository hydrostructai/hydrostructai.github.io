# Nguồn tải các "gems"
source "https://rubygems.org"

# SỬ DỤNG THEME DƯỚI DẠNG GEM (Cách ổn định nhất cho Minimal Mistakes)
gem "minimal-mistakes-jekyll"

# Các plugin cần thiết
gem "jekyll-feed", "~> 0.17.0"
gem "jekyll-seo-tag", "~> 2.8.0"
gem "jekyll-sitemap", "~> 1.4.0"
gem "jekyll-paginate"        # Cần cho chức năng phân trang trang chủ
gem "jekyll-include-cache"   # Cần để fix lỗi 'include_cached'

# Bỏ: gem "jekyll", "~> 4.3.0"
# Bỏ: gem "jekyll-remote-theme"
# Bỏ: gem "github-pages", group: :jekyll_plugins
